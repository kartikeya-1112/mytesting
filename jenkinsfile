pipeline {
    agent any

    tools {
        gradle 'Gradle8.8' // Use 'gradle' as the identifier for Gradle installation
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/example/my-java-project.git', branch: 'main'
            }
        }

        stage('Build') {
            steps {
                sh 'gradle build' // Execute Gradle build command
            }
        }

        // Add more stages as needed
    }
}
